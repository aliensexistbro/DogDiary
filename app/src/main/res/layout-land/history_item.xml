<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:id="@+id/historyItemBackButton"
        android:padding="15dp"
        android:background="@null"
        />
    <TextView
        android:id="@+id/logTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dogs Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding = "20dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pictureTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picture of the Day"
                android:layout_below="@id/logTitleTextView"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/pictureImageView"
                android:src="@drawable/placeholder_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/pictureTitleTextView"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_delete_24"
                android:drawableTint="@color/white"
                android:text="Delete Selected Log from History"
                android:id="@+id/deleteDailyLogButton"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/historyItemTable"
            android:minWidth="500dp"
            android:padding="20dp">
            <TableRow>
                <TextView
                    android:id="@+id/poopCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of poops:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/poopDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last poop time:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/peeCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of pee:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/peeDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last pee time:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/foodCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Meals:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/foodDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Count:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/walkCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of walk:"
                    android:layout_below="@id/foodDateTextView"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/walkTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walk Time:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/stepsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps:"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />

            </TableRow>
        </TableLayout>















    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/historyItemBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_menu"/>


</LinearLayout>
