<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/logTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dogs Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/pictureTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture of the Day"
        android:layout_below="@id/logTitleTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/pictureImageView"
        android:src="@drawable/placeholder_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/pictureTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera"
        android:layout_below="@id/pictureImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="takePhoto"/>

    <ImageButton
        android:id="@+id/logButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:layout_below="@id/cameraButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/history"
        android:layout_below="@id/logButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/poopCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of poops:"
        android:layout_below="@id/historyButton"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/poopDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last poop time:"
        android:layout_below="@id/poopCountTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/peeCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of pee:"
        android:layout_below="@id/poopDateTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/peeDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last pee time:"
        android:layout_below="@id/peeCountTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/foodCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of pee:"
        android:layout_below="@id/peeDateTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/foodDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last pee time:"
        android:layout_below="@id/foodCountTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/walkCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of walk:"
        android:layout_below="@id/foodDateTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/walkDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last pee time:"
        android:layout_below="@id/walkCountTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
</RelativeLayout>
